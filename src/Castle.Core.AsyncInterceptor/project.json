{
  "version": "0.1.0-*",

  "dependencies": {
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    },
    "Microsoft.CodeAnalysis.FxCopAnalyzers": {
      "version": "1.2.0-beta2",
      "type": "build"
    }
  },

  "frameworks": {
    "netstandard1.0": {
      "imports": "dnxcore50",
      "dependencies": {
        "NETStandard.Library": "1.5.0-rc2-24027",
        "Castle.Core": "4.0.0-alpha001"
      }
    },
    "net45": {
      "dependencies": {
        "Castle.Core": "3.1.0"
      }
    }
  },

  "buildOptions": {
    "additionalArguments": [ "/ruleset:stylecop.ruleset", "/additionalfile:stylecop.json" ],
    "xmlDoc": true
  }
}
