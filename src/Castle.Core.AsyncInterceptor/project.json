{
  "version": "1.2.0-*",

  "dependencies": {
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    },
    "Microsoft.CodeAnalysis.FxCopAnalyzers": {
      "version": "1.2.0-beta2",
      "type": "build"
    }
  },

  "frameworks": {
    "net45": {
      "dependencies": {
        "Castle.Core": "3.1.0"
      }
    },
    "netstandard1.3": {
      "dependencies": {
        "Castle.Core": "4.0.0",
        "System.Collections.Concurrent": "4.0.12"
      }
    }
  },

  "buildOptions": {
    "additionalArguments": [ "/ruleset:stylecop.ruleset", "/additionalfile:stylecop.json" ],
    "xmlDoc": true
  }
}
